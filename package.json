{
  "name": "blog-app",
  "version": "0.0.1",
  "author": "Bora BaloÄŸlu",
  "private": true,
  "scripts": {
    "commit": "git-cz",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start:prod": "export NODE_ENV=production && node dist/main",
    "start": "export NODE_ENV=production && nest start",
    "start:watch": "export NODE_ENV=production && nest start --watch",
    "start:debug": "export NODE_ENV=production && nest start --debug",
    "start:debug:watch": "export NODE_ENV=production && nest start --debug --watch",
    "start:dev": "export NODE_ENV=development && nest start",
    "start:dev:watch": "export NODE_ENV=development && nest start --watch",
    "start:dev:debug": "export NODE_ENV=development && nest start --debug",
    "start:dev:debug:watch": "export NODE_ENV=development && nest start --debug --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:watch": "jest --watch",
    "test": "jest"
  },
  "dependencies": {
    "@nestjs/common": "7.4.4",
    "@nestjs/core": "7.4.4",
    "@nestjs/jwt": "7.1.0",
    "@nestjs/passport": "7.1.0",
    "@nestjs/platform-fastify": "7.4.4",
    "@nestjs/sequelize": "0.1.0",
    "argon2": "0.27.0",
    "chalk": "4.1.0",
    "class-transformer": "0.3.1",
    "class-validator": "0.12.2",
    "dotenv": "8.2.0",
    "fastify-file-upload": "3.0.0",
    "fastify-static": "3.2.0",
    "nestjs-redis": "1.2.8",
    "passport": "0.4.1",
    "passport-jwt": "4.0.0",
    "pg": "8.3.3",
    "pg-native": "3.0.0",
    "pino-pretty": "4.2.1",
    "reflect-metadata": "0.1.13",
    "sequelize": "5.21.11",
    "sequelize-typescript": "1.1.0",
    "slugify": "1.4.5"
  },
  "devDependencies": {
    "@nestjs/cli": "7.5.1",
    "@nestjs/schematics": "7.0.0",
    "@nestjs/testing": "7.4.4",
    "@types/express": "4.17.8",
    "@types/jest": "25.1.4",
    "@types/node": "13.9.1",
    "@types/passport-jwt": "3.0.3",
    "@types/sequelize": "4.28.9",
    "@types/supertest": "2.0.10",
    "@types/validator": "13.1.0",
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/parser": "2.34.0",
    "commitizen": "4.2.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.22.0",
    "ghooks": "2.0.4",
    "jest": "25.5.4",
    "prettier": "1.19.1",
    "rimraf": "3.0.2",
    "sequelize-cli": "5.5.1",
    "supertest": "4.0.2",
    "ts-jest": "25.2.1",
    "ts-loader": "6.2.2",
    "ts-node": "8.10.2",
    "tsconfig-paths": "3.9.0",
    "typescript": "3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint -s"
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
